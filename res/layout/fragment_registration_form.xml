<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  android:id="@+id/scrollView"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">
 


      <rj.hive.tastery.ui.MyTextViewBrandon
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Your Personal Details"
          android:layout_margin="5dp"
          android:layout_alignParentTop="true" />

      <LinearLayout
          android:id="@+id/linearlayout1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/registration_layout_bg"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:layout_below="@+id/textView1" 
          android:layout_marginBottom="30dp">

          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="First Name"
              android:inputType="textCapSentences"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"
              android:singleLine="true"
              android:lines="1"
              android:ems="10" />
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Last Name"
              android:inputType="textCapSentences"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"           
              android:singleLine="true"
              android:lines="1"   
              android:ems="10" />
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Email"
              android:singleLine="true"
              android:lines="1"              
              android:inputType="textCapSentences"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"              
              android:ems="10" />
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Telephone"
              android:singleLine="true"
              android:lines="1"              
              android:inputType="textCapSentences"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"              
              android:ems="10" />
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText5"
              android:singleLine="true"
              android:lines="1"              
              android:inputType="textCapSentences"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Mobile"
              android:layout_marginBottom="30dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"              
              android:ems="10" />  
        

      </LinearLayout>
 
      
      
      <rj.hive.tastery.ui.MyTextViewBrandon
          android:id="@+id/textView15"
          android:layout_below="@+id/linearlayout1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Your Address"
          android:layout_margin="5dp"/>

      <LinearLayout
          android:id="@+id/linearlayout15"
          android:layout_below="@+id/textView15"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/registration_layout_bg"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:layout_marginBottom="30dp">

          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/company"
              android:singleLine="true"
              android:lines="1"              
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Company"
              android:inputType="textCapSentences"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"              
              android:ems="10" />                 
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText6"
              android:singleLine="true"
              android:lines="1"              
              android:inputType="textCapSentences"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Address 1"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"
              android:ems="10" />   
              
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText7"
              android:singleLine="true"
              android:lines="1"              
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:inputType="textCapSentences"
              android:hint="Address 2"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"
              android:ems="10" />   
              
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/editText8"
              android:singleLine="true"
              android:inputType="textCapSentences"
              android:lines="1"              
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="City"
              android:layout_marginBottom="30dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"
              android:ems="10" />     
      </LinearLayout>
      
      
      
      
      
      
      
      <rj.hive.tastery.ui.MyTextViewBrandon
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Your Password"
          android:singleLine="true"
          android:lines="1"          
          android:layout_margin="5dp"
          android:layout_below="@+id/linearlayout15" />    
          
      <LinearLayout
          android:id="@+id/linearlayout2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/registration_layout_bg"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:layout_below="@+id/textView2" 
          android:layout_marginBottom="30dp">

          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/passwordText1"
              android:inputType="textPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:singleLine="true"
              android:lines="1"              
              android:hint="Password"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"
              android:ems="10" />
          <rj.hive.tastery.ui.MyEditTextBrandon
              android:id="@+id/passwordText2"
              android:inputType="textPassword"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:hint="Repeat Password"
              android:singleLine="true"
              android:lines="1"              
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:padding="3dp"              
              android:ems="10" />
      </LinearLayout>  
      
    <!--  MyCheckBoxBrandon -->
	<rj.hive.tastery.ui.MyTextViewBrandon     
	    android:id="@+id/checkbox1"
	    android:layout_margin="5dp"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:text="By signing up, I have read and agree to the Terms and Condition." 
	    android:layout_below="@+id/linearlayout2" />      
	    
    <LinearLayout
        android:layout_below="@+id/checkbox1"
        android:orientation="horizontal"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="5dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content">

        <rj.hive.tastery.ui.MyButtonBrandon
            android:id="@+id/allow"
            android:layout_width="0.0dip" 
            android:layout_height="fill_parent"
            android:background="@drawable/registration_buttons_bg"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:text="Sign Up"
            android:textColor="#FFFFFF"
            android:layout_weight="1.0" />

        <rj.hive.tastery.ui.MyButtonBrandon
            android:id="@+id/deny"
            android:layout_width="0.0dip"
            android:layout_marginLeft="15dp" 
            android:layout_marginRight="15dp"
            android:layout_height="fill_parent"
            android:background="@drawable/registration_buttons_bg"
            android:textColor="#FFFFFF"
            android:text="Back"
            android:layout_weight="1.0" />

    </LinearLayout>	
	
  </RelativeLayout>
</ScrollView>