<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  android:id="@+id/scrollView"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFF"
  android:fillViewport="true">
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#ffffff">
        
      <rj.hive.tastery.ui.MyTextViewBrandon
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Your Personal Details"
          android:layout_margin="5dp"
          android:layout_alignParentTop="true" />

      <LinearLayout
          android:id="@+id/linearlayout1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_margin="8dp"
          android:layout_below="@+id/textView1" >

          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginTop="30dp"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:id="@+id/text1"
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="First Name"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtFirstName"
	              android:layout_width="0dip"
	              android:layout_weight="1"	              
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:inputType="textCapSentences"
	              android:padding="3dp"
	              android:singleLine="true"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Last Name"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtLastName"
	              android:layout_width="0dip"
	              android:layout_weight="1"	              
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:padding="3dp"
	              android:inputType="textCapSentences"
	              android:singleLine="true"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>

          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Email"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtEmail"
	              android:layout_width="0dip"
	              android:layout_weight="1"
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:padding="3dp"
	              android:singleLine="true"
	              android:inputType="textCapSentences"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>          

          
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Telephone"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtTelephone"
	              android:layout_width="0dip"
	              android:layout_weight="1"
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:padding="3dp"
	              android:inputType="textCapSentences"
	              android:singleLine="true"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>          

          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Mobile"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtMobile"
	              android:layout_width="0dip"
	              android:layout_weight="1"
	              android:inputType="textCapSentences"
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:padding="3dp"
	              android:singleLine="true"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>  
          
          <LinearLayout 
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#FFFFFF"
              android:layout_marginBottom="15dp"
              android:layout_marginLeft="15dp"
              android:layout_marginRight="15dp"
              android:orientation="horizontal">
              
              
	          <rj.hive.tastery.ui.MyTextViewBrandon
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="Address"
	              android:padding="3dp"/>
                        
	          <rj.hive.tastery.ui.MyEditTextBrandon
	              android:id="@+id/txtAddress"
	              android:layout_width="0dip"
	              android:layout_weight="1"
	              android:inputType="textCapSentences"
	              android:layout_height="wrap_content"
	              android:hint=""
	              android:padding="3dp"
	              android:singleLine="true"
	              android:lines="1"
	              android:ems="10" />
          </LinearLayout>

      </LinearLayout>
 
      <rj.hive.tastery.ui.MyButtonBrandon
            android:id="@+id/btnConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/registration_buttons_bg"
            android:layout_marginTop="5dp" 
            android:layout_marginBottom="5dp"
            android:text="Confirm"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/linearlayout1" />
	
  </RelativeLayout>
</ScrollView>