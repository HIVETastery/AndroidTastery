<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#005476"
  android:fillViewport="true">
  
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp">
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="3dp" />  
    
      <rj.hive.tastery.ui.MyTextViewBrandon
            android:id="@+id/texttitle"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Cart Item"
            android:layout_below="@+id/imageView1" />
        
 			
    
      <rj.hive.tastery.ui.MyTextViewBrandon
            android:id="@+id/text2"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/texttitle"
            android:text="Quantity:" />
      
      <EditText 
          android:id="@+id/txtQuantity"
   		  android:inputType="number"
   		  android:layout_width="35dip"
   		  android:layout_height="35dip"
   		  android:layout_below="@+id/texttitle"
   		  android:layout_toRightOf="@+id/text2"
   		  />
      
      <rj.hive.tastery.ui.MyTextViewBrandon
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="35dip"
            android:gravity="center_horizontal"
            android:layout_below="@+id/text2"
            android:layout_marginLeft="10dp"
            android:text="Delivery Time:" />
      
      <Spinner 
          android:id="@+id/spDeliveryTime"
   		  android:layout_width="200dip"
   		  android:layout_height="wrap_content"
   		  android:layout_centerHorizontal="true"
   		  android:layout_below="@+id/text3"
          />
            
    <Button
        	android:layout_below="@+id/spDeliveryTime"
            android:id="@+id/btnUpdateCartItem"
            android:layout_marginBottom="20dp"
            android:layout_centerHorizontal="true"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:text="Save Changes"      
            android:textColor="#FFFFFF"
            android:background="@drawable/registration_buttons_bg"
        />
        

</RelativeLayout>
</ScrollView>