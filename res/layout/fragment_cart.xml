<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:f="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="anonymask.jumola.anonymask.SplashActivity"
    android:background="#FFFFFF" >

	<ScrollView 
	    android:id="@+id/scroll1"
	    android:layout_height="wrap_content"
	    android:layout_width="match_parent"
	    android:fillViewport="true"
	    android:layout_alignParentTop="true" >
		<RelativeLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content">
			<LinearLayout
		    	android:id="@+id/table"
		    	android:layout_width="match_parent"
		    	android:layout_height="wrap_content"
				android:layout_alignParentTop="true"
	            android:orientation="vertical"
	            android:background="#ffffff">
	     	</LinearLayout>
	     
		
		
	    	<ListView
            	android:id="@+id/listCart"
            	android:layout_below="@+id/table"
				android:textAppearance="?android:attr/textAppearanceMedium"            
            	android:layout_width="wrap_content"
            	android:layout_height="250dp"
            	android:layout_alignParentLeft="true"
            	android:layout_marginBottom="5dp"
            	android:layout_marginLeft="15dp"
            	android:layout_marginTop="5dp"/>	
	      
    		<rj.hive.tastery.ui.MyTextViewBrandon
            	android:id="@+id/textView1"
            	android:layout_below="@+id/listCart"
				android:textAppearance="?android:attr/textAppearanceMedium"            
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_marginBottom="5dp"
            	android:layout_marginRight="10dp"
            	android:layout_marginTop="5dp"
            	android:text="VAT: 114.40" />	
            
    		<rj.hive.tastery.ui.MyTextViewBrandon
            	android:id="@+id/textView2"
            	android:layout_below="@+id/textView1"
				android:textAppearance="?android:attr/textAppearanceMedium"            
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:layout_alignParentRight="true"
            	android:layout_marginBottom="5dp"
            	android:layout_marginRight="10dp"
            	android:layout_marginTop="5dp"
            	android:text="TOTAL: 500.12" />	

    	 <Button
        	android:layout_below="@+id/textView2"
            android:id="@+id/btnCheckout"
            android:layout_centerHorizontal="true"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:text="Checkout"      
            android:textColor="#FFFFFF"
            android:background="@drawable/registration_buttons_bg"
        />
      
		</RelativeLayout>

	</ScrollView>

</RelativeLayout>